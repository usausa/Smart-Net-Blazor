<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>Smart</RootNamespace>
    <CodeAnalysisRuleSet>..\Smart.Blazor.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <PropertyGroup>
    <PackageId>Usa.Smart.Blazor</PackageId>
    <Title>Smart.Blazor</Title>
    <Description>Smart Blazor library</Description>
    <Summary>Smart Blazor library</Summary>
    <PackageTags>smart aspnetcore blazor</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="6.0.4" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.4" />
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="6.17.0" />
    <PackageReference Include="Usa.Smart.Core" Version="2.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="AspNetCore\Components\Loop.razor" />
    <Content Remove="bundleconfig.json" />
  </ItemGroup>

  <ItemGroup>
    <None Include="AspNetCore\Components\Loop.razor" />
    <None Include="bundleconfig.json" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="AspNetCore\Components\Loop.razor" />
  </ItemGroup>

  <ItemGroup>
    <_ContentIncludedByDefault Remove="AspNetCore\Components\Loop.razor" />
  </ItemGroup>

</Project>
